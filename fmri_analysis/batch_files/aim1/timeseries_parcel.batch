#!/bin/bash
#SBATCH --job-name={task}-timeseries
#SBATCH --output=.out/{task}-timeseries_%j.out
#SBATCH --error=.err/{task}-timeseries_%j.err
#SBATCH --time=5:00:00
#SBATCH --mail-type=END
#SBATCH --mail-user=poldracklab@stanford.edu
#SBATCH --cpus-per-task=16
#SBATCH --ntasks-per-node=1
#SBATCH -p russpold
export PYTHONPATH=""
# set up paths
# scratch is automatically mounted
ml python/3.6.1
derivatives_loc=`sed '6q;d' singularity_config.txt`

data_loc=`sed '8q;d' singularity_config.txt`
scripts_loc=../../scripts
scratch_loc=$SCRATCH

bids_dir=`sed '8q;d' singularity_config.txt`
parcellation_loc=${scripts_loc}/'Parcels_Combo.nii.gz'
output_dir=${derivatives_loc}/'1stlevel/timeseries'

python3 ../../../fmri_data_prep/timeseries_parcellation.py -bids_dir ${bids_dir} -parcellation_loc ${parcellation_loc} -output_dir ${output_dir} --tasks {task}
